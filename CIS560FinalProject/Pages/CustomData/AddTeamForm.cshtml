@page
@model AddTeamFormModel
@{
    ViewData["Title"] = "Add New Team";
}
<div class="custom-horizontal-align">
    <div class="vertical-align">
        <h1>@ViewData["Title"]</h1>
        <form>
            <table class="table">
                <thead>
                    <tr>
                        <th>Team Name</th>
                        <th>Team Conference</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>

                            <input type="text" id="teamName" name="teamName"/>
                        </td>
                        <td>
                            <div class="horizontal-align">
                                <input checked type="radio" name="conference" value="Eastern" /><label for="conference">&ensp;Eastern&ensp;</label><br />
                                <input type="radio" name="conference" value="Western" /><label for="conference">&ensp;Western&ensp;</label><br />
                            </div>
                        </td>
                        <td>
                            <input class="submit add-button" type="submit" value="Add Team">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
        <br />
        <br />
        <div class="flex-row horizontal-align left-border">
            <div class="vertical-align">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Conference</th>
                            <th>Verified</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Teams != null)
                        {
                            foreach (var row in Model.Teams)
                            {
                                @if(row.Verified > 0)
                                {
                                    <tr class="non-verified-row">
                                        <td>@row.TeamID</td>
                                        <td>@row.Name</td>
                                        <td>@row.ConferenceName</td>
                                        <td>No</td>
                                    </tr>
                                }
                                @if (row.Verified == 0)
                                {
                                    <tr class="verified-row">
                                        <td>@row.TeamID</td>
                                        <td>@row.Name</td>
                                        <td>@row.ConferenceName</td>
                                        <td>Yes</td>
                                    </tr>
                                }
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>


    </div>
</div>
