@page
@model AddGameFormModel
@{
    ViewData["Title"] = "Add New Game";
}
<div class="custom-horizontal-align">
    <div class="vertical-align">
        <h1>@ViewData["Title"]</h1>
        <form>
            <table class="table">
                <thead>
                    <tr>
                        <th>Year</th>
                        <th>Home Team</th>
                        <th>Away Team</th>
                        <th>Home Points</th>
                        <th>Away Points</th>
                        <th>Home Assists</th>
                        <th>Away Assists</th>
                        <th>Home Rebounds</th>
                        <th>Away Rebounds</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="number" step="1" placeholder="2019" id="year" name="year">
                        </td>
                        <td>
                            <select name="homeTeam" id="homeTeam">
                                @foreach (var T in Model.Teams)
                                { 
                                <option class="@(T.Verified == 0 ? "verified-row" : "non-verified-row") " value="@T.TeamID">@T.Name</option>
                                }
                            </select>
                        </td>
                        <td>
                            <select name="awayTeam" id="awayTeam">
                                @foreach (var T in Model.Teams)
                                {
                                    <option class="@(T.Verified == 0 ? "verified-row" : "non-verified-row") " value="@T.TeamID">@T.Name</option>
                                }
                            </select>
                        </td>
                        <td>
                            <input class="small-textbox" type="number" step="1" placeholder="80" id="homePoints" name="homePoints">
                        </td>
                        <td>
                            <input class="small-textbox" type="number" step="1" placeholder="70" id="awayPoints" name="awayPoints">
                        </td>
                        <td>
                            <input class="small-textbox" type="number" step="1" placeholder="5" id="homeAssists" name="homeAssists">
                        </td>
                        <td>
                            <input class="small-textbox" type="number" step="1" placeholder="4" id="awayAssists" name="awayAssists">
                        </td>
                        <td>
                            <input class="small-textbox" type="number" step="1" placeholder="10" id="homeRebounds" name="homeRebounds">
                        </td>
                        <td>
                            <input class="small-textbox" type="number" step="1" placeholder="9" id="awayRebounds" name="awayRebounds">
                        </td>
                        <td>
                            <input class="submit add-button" type="submit" value="Add Game">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
        <br />
        <br />
        <div class="flex-row horizontal-align left-border">
            <div class="vertical-align">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Year</th>
                            <th>Home Team</th>
                            <th>Away Team</th>
                            <th>Winner</th>
                            <th>Home Points</th>
                            <th>Away Points</th>
                            <th>Home Assists</th>
                            <th>Away Assists</th>
                            <th>Home Rebounds</th>
                            <th>Away Rebounds</th>
                            <th>Verified</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Teams != null)
                        {
                            foreach (var row in Model.Games)
                            {
                                @if(row.Verified > 0)
                                {
                                    <tr class="non-verified-row">
                                    <td>@row.Year</td>
                                    <td>@row.HomeTeamName</td>
                                    <td>@row.AwayTeamName</td>
                                    <td>@row.WinningTeamName</td>
                                    <td>@row.HomePoints</td>
                                    <td>@row.AwayPoints</td>
                                    <td>@row.HomeAssists</td>
                                    <td>@row.AwayAssists</td>
                                    <td>@row.HomeRebounds</td>
                                    <td>@row.AwayRebounds</td>
                                    <td>No</td>
                                    </tr>    
                                    }
                                @if (row.Verified == 0)
                                {
                                    <tr class="verified-row">
                                        <td>@row.Year</td>
                                        <td>@row.HomeTeamName</td>
                                        <td>@row.AwayTeamName</td>
                                        <td>@row.WinningTeamName</td>
                                        <td>@row.HomePoints</td>
                                        <td>@row.AwayPoints</td>
                                        <td>@row.HomeAssists</td>
                                        <td>@row.AwayAssists</td>
                                        <td>@row.HomeRebounds</td>
                                        <td>@row.AwayRebounds</td>
                                        <td>Yes</td>
                                    </tr>
                                }

                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>


    </div>
</div>
